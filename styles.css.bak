}

.reveal-text.active {
    opacity: 1;
    transform: translateY(0);
}

.reveal-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s, transform 0.6s;
}

.reveal-card.active {
    opacity: 1;
    transform: translateY(0);
}

/* Responsive Styles */
@media screen and (max-width: 1200px) {
    .hero-headline h1 { font-size: 4rem; }
    .hero-headline h2 { font-size: 3rem; }
    .hero-headline h3 { font-size: 3rem; }
    .tagline { font-size: 1.5rem; }
}

@media screen and (max-width: 768px) {
    body {
        cursor: auto;
    }
    
    .cursor, .cursor-follower {
        display: none;
    }
    
    .nav-links {
        position: fixed;
        right: 0;
        top: 0;
        height: 100vh;
        background: rgba(26, 26, 26, 0.98);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 70%;
        transform: translateX(100%);
        transition: transform 0.5s ease-in;
        z-index: 999;
    }
    
    .nav-links li {
        opacity: 0;
        margin: 1.5rem 0;
    }
    
    .burger {
        display: block;
        z-index: 1001;
    }
    
    .nav-active {
        transform: translateX(0%);
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
    }
    
    .hero-content {
        flex-direction: column;
        text-align: center;
        padding: 2rem;
    }
    
    .hero-text-container {
        width: 100%;
        order: 2;
    }
    
    .hero-graphic {
        width: 100%;
        order: 1;
        margin-bottom: 2rem;
    }
    
    .hero-headline h1 { font-size: 3rem; }
    .hero-headline h2 { font-size: 2.2rem; }
    .hero-headline h3 { font-size: 2.2rem; }
    .tagline { font-size: 1.3rem; white-space: normal; }
    .hero-description { max-width: 100%; margin: 0 auto 1.5rem; }
    
    .logo-static { width: 200px; }
    .logo-container { width: 250px; height: 250px; }
    
    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .section-title::after {
        left: 50%;
        transform: translateX(-50%);
    }
    
    .section-title, .intro-text, .about-text, .journey-text {
        text-align: center;
    }
    
    .hero-logo img {
        max-width: 200px;
    }
    
    .hero p {
        font-size: 1.3rem;
        white-space: normal;
    }
    
    .cta-button {
        padding: 0.8rem 1.8rem;
        font-size: 1rem;
    }
    
    .glass-card {
        margin: 0 auto;
        padding: 1.5rem;
    }
}

@media screen and (max-width: 480px) {
    .hero h1, .page-hero h1 {
        font-size: 2rem;
    }
    
    .offerings-grid, .values-grid, .team-grid {
        grid-template-columns: 1fr;
    }
    
    .nav-links {
        width: 100%;
    }
}

/* Animation for burger menu */
.toggle .line1 {
    transform: rotate(-45deg) translate(-5px, 6px);
}

.toggle .line2 {
    opacity: 0;
}

.toggle .line3 {
    transform: rotate(45deg) translate(-5px, -6px);
}

/* Add a subtle gradient overlay to the hero background */
.hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.6) 100%);
    z-index: 0;
}

/* Add subtle animation to the hero content */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Update nav links hover effect */
.nav-links li a::after {
    background-color: var(--accent-color);
}

/* Update social media icons */
.social-icons a {
    color: var(--accent-color);
}

.social-icons a:hover {
    color: #e6c83a;
}

/* Update any remaining blue elements */
.section-title span {
    color: var(--accent-color);
}

/* Update form focus states */
input:focus, textarea:focus {
    border-color: var(--accent-color);
}

/* Add a subtle transition between dark and light sections */
.accomplishments::after {
    content: none;
}

/* Remove the shadow/gradient effect between sections */
.testimonials {
    padding: 5rem 0;
    background-color: var(--secondary-color);
    position: relative;
}

/* Ensure clean borders between sections */
.testimonials::before {
    content: none;
}

/* Make sure testimonial cards don't have excessive shadows */
.testimonial-slide {
    background-color: white;
    padding: 2.5rem;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    position: relative;
    border-left: 4px solid var(--accent-color);
}

/* Improved scroll indicator like onething.design */
.scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 10;
    cursor: pointer;
}

.scroll-line {
    width: 1px;
    height: 60px;
    background-color: var(--accent-color);
    margin-bottom: 0.5rem;
    position: relative;
    overflow: hidden;
}

.scroll-line::after {
    content: '';
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--light-text);
    animation: scrollDown 2s ease-in-out infinite;
}

.scroll-indicator span {
    color: var(--light-text);
    font-size: 0.8rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    opacity: 0.7;
}

@keyframes scrollDown {
    0% {
        top: -100%;
    }
    100% {
        top: 100%;
    }
}

/* Create a scrollable container */
.smooth-scroll-wrapper {
    position: static;
    width: 100%;
    overflow: visible;
    will-change: transform;
}

[data-scroll-content] {
    will-change: transform;
    transform: none !important;
}

/* Footer styling */
footer {
    position: relative;
    background-color: var(--primary-color);
    color: var(--light-text);
    padding: 4rem 0 2rem;
    z-index: 1;
}

/* Footer backdrop to prevent white space */
.footer-backdrop {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--primary-color);
    z-index: -1;
}

/* Ensure base colors are consistent */
html, body {
    background-color: var(--secondary-color);
}

/* Fix for browsers that don't support smooth scrolling */
@media (prefers-reduced-motion: reduce) {
    html {
        scroll-behavior: auto;
    }
    
    body {
        position: static !important;
        height: auto !important;
        overflow: auto !important;
    }
    
    .smooth-scroll-wrapper {
        position: static !important;
        transform: none !important;
    }
    
    [data-scroll-content] {
        transform: none !important;
    }
}

/* Landscape Scroller Styles */
.landscape-scroller {
    padding: 5rem 0;
    background-color: var(--secondary-color);
    overflow: hidden;
    position: relative;
    z-index: 1;
}

.landscape-scroller::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgba(240, 212, 76, 0.15) 0%, rgba(240, 212, 76, 0.05) 50%, rgba(240, 212, 76, 0) 70%);
    z-index: -1;
    opacity: 0.8;
    animation: pulseBackground 8s infinite alternate;
}

.landscape-scroller::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background-image: 
        radial-gradient(circle at 30% 40%, rgba(240, 212, 76, 0.1) 0%, transparent 10%),
        radial-gradient(circle at 70% 60%, rgba(240, 212, 76, 0.1) 0%, transparent 15%),
        radial-gradient(circle at 50% 50%, rgba(240, 212, 76, 0.05) 0%, transparent 25%);
    z-index: -2;
    opacity: 0.7;
    animation: rotateBackground 30s infinite linear;
}

@keyframes pulseBackground {
    0% {
        opacity: 0.5;
        transform: scale(1);
    }
    50% {
        opacity: 0.8;
        transform: scale(1.05);
    }
    100% {
        opacity: 0.6;
        transform: scale(1);
    }
}

@keyframes rotateBackground {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

/* Enhance section title for better contrast */
.landscape-scroller .section-title {
    position: relative;
    margin-bottom: 2rem;
    color: var(--primary-color);
    text-align: center;
}

.landscape-scroller .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    width: 80px;
    height: 3px;
    background-color: var(--accent-color);
    transform: translateX(-50%);
}

/* Enhance the slider appearance */
.landscape-container {
    border: 1px solid rgba(240, 212, 76, 0.3);
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15), 0 0 15px rgba(240, 212, 76, 0.2);
    margin-bottom: 2rem;
    position: relative;
    aspect-ratio: 16/9;
    transition: all 0.3s ease;
}

.landscape-container:hover {
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2), 0 0 20px rgba(240, 212, 76, 0.3);
    transform: translateY(-5px);
}

.landscape-gallery {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
}

.landscape-slides {
    position: relative;
    height: 100%;
    width: 100%;
}

.landscape-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    z-index: 1;
}

.landscape-slide.active {
    opacity: 1;
    z-index: 2;
}

.landscape-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
}

.slide-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1.5rem;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
    color: var(--light-text);
    font-size: 1.5rem;
    font-weight: 600;
    border-radius: 0 0 10px 10px;
}

.landscape-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
}

.landscape-prev, .landscape-next {
    background-color: var(--primary-color);
    color: var(--light-text);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.landscape-prev:hover, .landscape-next:hover {
    background-color: var(--accent-color);
    color: var(--primary-color);
    transform: translateY(-2px);
}

.landscape-dots {
    display: flex;
    gap: 0.5rem;
}

.landscape-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(26, 26, 26, 0.3);
    cursor: pointer;
    transition: all 0.3s ease;
}

.landscape-dot.active {
    background-color: var(--accent-color);
    transform: scale(1.2);
}

/* Create animation for slide transitions */
@keyframes fadeIn {
    from { opacity: 0; transform: scale(1.05); }
    to { opacity: 1; transform: scale(1); }
}

.landscape-slide.active img {
    animation: fadeIn 1s ease-in-out;
}

/* Additional glow effect for the entire footer */
footer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 50%, rgba(240, 212, 76, 0.03) 0%, transparent 70%);
    animation: footerBackgroundGlow 15s infinite alternate;
    pointer-events: none;
}

@keyframes footerBackgroundGlow {
    0% {
        background-position: 0% 0%;
        opacity: 0.3;
    }
    50% {
        background-position: 100% 100%;
        opacity: 0.6;
    }
    100% {
        background-position: 0% 0%;
        opacity: 0.3;
    }
