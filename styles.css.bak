    color: var(--light-text);
}

/* Animated Glow Container */
.animated-glow-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
}

.glow-element {
    position: absolute;
    width: 30vw;
    height: 30vw;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(240, 212, 76, 0.15) 0%, rgba(240, 212, 76, 0) 70%);
    filter: blur(40px);
    opacity: 0.6;
    pointer-events: none;
}

.glow-element:nth-child(1) {
    top: 20%;
    left: -10%;
    animation: moveGlow1 25s infinite alternate ease-in-out;
}

.glow-element:nth-child(2) {
    bottom: 10%;
    right: 5%;
    width: 25vw;
    height: 25vw;
    animation: moveGlow2 18s infinite alternate-reverse ease-in-out;
}

.glow-element:nth-child(3) {
    top: 40%;
    right: 25%;
    width: 20vw;
    height: 20vw;
    animation: moveGlow3 22s infinite alternate ease-in-out;
}

@keyframes moveGlow1 {
    0% {
        transform: translate(0, 0);
        opacity: 0.4;
    }
    50% {
        transform: translate(20vw, 10vh);
        opacity: 0.6;
    }
    100% {
        transform: translate(5vw, 25vh);
        opacity: 0.3;
    }
}

@keyframes moveGlow2 {
    0% {
        transform: translate(0, 0);
        opacity: 0.5;
    }
    50% {
        transform: translate(-15vw, -10vh);
        opacity: 0.7;
    }
    100% {
        transform: translate(-5vw, -20vh);
        opacity: 0.4;
    }
}

@keyframes moveGlow3 {
    0% {
        transform: translate(0, 0);
        opacity: 0.3;
    }
    50% {
        transform: translate(-10vw, 15vh);
        opacity: 0.5;
    }
    100% {
        transform: translate(10vw, -10vh);
        opacity: 0.6;
    }
}

/* Contact Hero Section */
.contact-hero {
    min-height: 100vh;
    padding: 120px 0 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
    background-color: #0a0a0a;
}

.contact-container {
    width: 90%;
    max-width: 1300px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    background: rgba(20, 20, 20, 0.7);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(240, 212, 76, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(240, 212, 76, 0.1);
    padding: 0;
}

.contact-info {
    background: rgba(15, 15, 15, 0.8);
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.contact-info h1 {
    font-size: 3.2rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(90deg, #ffffff, var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.contact-info h2 {
    font-size: 2rem;
    color: #aaa;
    margin-bottom: 3rem;
}

.contact-details {
    margin-top: 2rem;
}

.contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.contact-item i {
    color: var(--accent-color);
    font-size: 1.2rem;
    margin-right: 1rem;
    margin-top: 0.25rem;
}

.contact-item p {
    margin: 0;
    line-height: 1.6;
    color: #ddd;
}

.social-icons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
}

.social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
    transition: all 0.3s ease;
}

.social-icons a:hover {
    background-color: var(--accent-color);
    color: #000;
    transform: translateY(-3px);
}

.contact-form-container {
    padding: 3rem;
    background: rgba(25, 25, 25, 0.6);
}

.contact-form-container h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: #f5f5f5;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 1rem;
    border-radius: 5px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    color: #fff;
    font-family: 'Montserrat', sans-serif;
    transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 10px rgba(240, 212, 76, 0.2);
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.query-type p {
    margin-bottom: 1rem;
    color: #ddd;
}

.query-options {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.query-option {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.query-option input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
}

.query-option span {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #ddd;
    transition: all 0.3s ease;
}

.query-option input:checked + span {
    background-color: var(--accent-color);
    color: #000;
    font-weight: 600;
}

.submit-btn {
    background-color: var(--accent-color);
    color: #000;
    border: none;
    padding: 1rem 2rem;
    border-radius: 5px;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1rem;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: all 0.4s ease;
    z-index: -1;
}

.submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 7px 20px rgba(0, 0, 0, 0.3);
}

.submit-btn:hover::before {
    left: 100%;
}

/* Responsive styles for contact page */
@media screen and (max-width: 992px) {
    .contact-container {
        grid-template-columns: 1fr;
    }
    
    .contact-info {
        padding: 2rem;
    }
    
    .contact-form-container {
        padding: 2rem;
    }
}

@media screen and (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .contact-info h1 {
        font-size: 2.5rem;
    }
    
    .contact-info h2 {
        font-size: 1.5rem;
    }
}

/* Ensure no gap appears between header and content */
html {
    background-color: #0a0a0a;
}

body {
    background-color: #0a0a0a;
    min-height: 100vh;
    position: relative;
}

header + section, 
header + div + section,
header + * + section {
    margin-top: 0;
    padding-top: 80px; /* Match header height */
}

/* Prevent white flash on page load */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #0a0a0a;
    z-index: -1;
}

/* Darken the header fully */
header {
    background-color: #181818; /* Dark grey instead of pure black */
    border-bottom: 1px solid rgba(240, 212, 76, 0.1);
}

header.scrolled {
    background-color: rgba(20, 20, 20, 0.98); /* Slightly lighter when scrolled */
}

/* Ensure all headers are dark-themed */
.page-hero, .about-hero, .events-hero, .contact-hero {
    background-color: #0a0a0a;
}

/* Update any other instances of header background */
.nav-active {
    background-color: #181818 !important;
} 